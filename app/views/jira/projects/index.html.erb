<%= javascript_include_tag 'index' %>
<div class="row">
  <div class="col-md-3"></div>
  <div class="container-question col-md-6 text-center mt-4 centered-column-container">
    <h4 class="mt-4 text-white">Select a Project</h4>
    <ul class="list-group list-group-flush">
      <% @projects.each do |project| %>
      <li class="list-group-item mt-4 list-group-setting" onclick="select(this)" data-project-id="<%= project.id %>">
        <%= project.name %>
      </li>
      <% end %>
    </ul>
    <div class="mt-4 mb-4 space-between-container">
      <%= button_to 'Cancel', pages_home_path, method: :get, class: 'btn btn-primary btn-lg cancel-button' %>
      <%= render 'jira/shared/alerts' %>
      <div id="alert-show"></div>
      <%= button_to 'Next', '#', class: 'btn btn-primary btn-lg next-button', id: 'fetch-issues-button', onclick: "showAlertAndDisableButton()" %>
    </div>
  </div>
  <div class="col-md-3"></div>
</div>